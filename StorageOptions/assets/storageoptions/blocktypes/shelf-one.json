{
    "code": "shelfone",
    "class": "StorageOptions.BlockShelfOne",
    "entityclass": "StorageOptions.BlockEntityShelfOne",
    "variantgroups": [{ "code": "side", "loadFromProperties": "abstract/horizontalorientation" }],
    "attributes": {
        "handbook": { "groupBy": ["shelfone-*"] },
        "inventoryClassName": "shelfone",
        "attributeTransformCode": "onShelfOneTransform"
    },
    "behaviors": [
        // to handle drops properly, call HorizontalAttachable before BlockShapeTexturesFromAttributes
        { "name": "AttributeRenderingLibrary.HorizontalAttachable", "properties": { "dropBlockFace": "east" } },
        {
            "name": "AttributeRenderingLibrary.BlockShapeTexturesFromAttributes",
            "properties": {
                "name": {
                    "*": ["block-shelf-normal-*", " (", "material-{wood}", ")"]
                },
                "textures": {
                    "wood-*": {
                        "surface": { "base": "game:block/wood/debarked/{wood}" },
                        "wood2": { "base": "game:block/wood/debarked/{wood}" }
                    },
                    "*": {
                        "surface": { "base": "game:block/wood/debarked/oak" },
                        "wood2": { "base": "game:block/wood/debarked/oak" }
                    }
                }
            }
        }
    ],
    "entityBehaviors": [{ "name": "AttributeRenderingLibrary.ShapeTexturesFromAttributes" }],
    "creativeInventoryStacksByType": {
        "*-east": [
            {
                "tabs": ["general", "decorative", "storageoptions"],
                "stacks": [
                    { "type": "block", "code": "shelfone-east", "attributes": { "types": { "wood": "birch" } } },
                    { "type": "block", "code": "shelfone-east", "attributes": { "types": { "wood": "oak" } } },
                    { "type": "block", "code": "shelfone-east", "attributes": { "types": { "wood": "maple" } } },
                    { "type": "block", "code": "shelfone-east", "attributes": { "types": { "wood": "pine" } } },
                    { "type": "block", "code": "shelfone-east", "attributes": { "types": { "wood": "acacia" } } },
                    { "type": "block", "code": "shelfone-east", "attributes": { "types": { "wood": "kapok" } } },
                    { "type": "block", "code": "shelfone-east", "attributes": { "types": { "wood": "baldcypress" } } },
                    { "type": "block", "code": "shelfone-east", "attributes": { "types": { "wood": "larch" } } },
                    { "type": "block", "code": "shelfone-east", "attributes": { "types": { "wood": "redwood" } } },
                    { "type": "block", "code": "shelfone-east", "attributes": { "types": { "wood": "ebony" } } },
                    { "type": "block", "code": "shelfone-east", "attributes": { "types": { "wood": "walnut" } } },
                    { "type": "block", "code": "shelfone-east", "attributes": { "types": { "wood": "purpleheart" } } }
                ]
            }
        ]
    },
    "shape": {
        "base": "game:block/wood/shelf",
        "selectiveElements": ["lower shelf"],
        "rotateYByType": { "*-north": 0, "*-east": 270, "*-west": 90, "*-south": 180 }
    },
    "blockmaterial": "Wood",
    "lightAbsorption": 0,
    "faceCullMode": "NeverCull",
    "emitSideAo": { "all": false },
    "sidesolid": { "all": false },
    "sideopaque": { "all": false },
    "replaceable": 999,
    "resistance": 1.5,
    "combustibleProps": {
        "burnTemperature": 600,
        "burnDuration": 10
    },
    "sounds": {
        "place": "game:block/planks",
        "hit": "game:block/planks",
        "break": "game:block/planks"
    },
    "rainPermeable": true,
    "materialDensity": 600,
    "collisionSelectionBox": {
        "x1": 0,
        "y1": 0,
        "z1": 0,
        "x2": 1,
        "y2": 0.125,
        "z2": 0.8125,
        "rotateYByType": { "*-north": 0, "*-east": 270, "*-west": 90, "*-south": 180 }
    },
    "guiTransform": {
        "origin": { "x": 0.5, "y": -0, "z": 0.5 },
        "scale": 1.2
    },
    "fpHandTransform": {
        "translation": { "x": 0.08, "y": -0.2, "z": 0.6 },
        "rotation": { "x": 33, "y": 134, "z": -102 }
    }
}
